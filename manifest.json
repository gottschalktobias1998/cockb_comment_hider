{
    "manifest_version": 3,
    "name": "DOCKB - Comment Hider",
    "version": "1.0",
    "description": "Hides elements with the class 'card-footer' on 'https://dock-b.com/*'.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://dock-b.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://dock-b.com/*"],
        "js": ["hider.js"]
      }
    ],
    "icons": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    }
  }
  